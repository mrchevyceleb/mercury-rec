{
  "name": "mercury-rec",
  "version": "1.0.0",
  "description": "Liquid metal system audio recorder. Capture system audio, microphone, or both as MP3 with a frameless glassmorphic UI.",
  "author": "mrchevyceleb",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrchevyceleb/mercury-rec.git"
  },
  "keywords": [
    "audio",
    "recorder",
    "system-audio",
    "loopback",
    "electron",
    "mp3",
    "screen-capture"
  ],
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "electron-updater": "^6.8.3",
    "ffmpeg-static": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0"
  },
  "build": {
    "appId": "com.mercuryrec.app",
    "productName": "Mercury Rec",
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/**"
    ],
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css"
    ],
    "publish": {
      "provider": "github",
      "owner": "mrchevyceleb",
      "repo": "mercury-rec"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "target": "dmg",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
